pipeline {

    agent any


    stages{

        stage("clonacion del repositorio"){

            steps {
                   //clonamos el repositorio
                    git branch: 'main', url: 'https://github.com/j-benit/micro.git'
            }

        }

        // opcional porque se puede hacer con el docker compose
        stage("construccion de la imagen de docker"){
            steps{

                // comando d edocker para el build
                 script {
                    withCredentials([
                        string(credentialsId: 'BASE_URL', variable: 'BASE_URL')
                    ]) {
                        docker.build('proyectos-micro:v1', '--build-arg BASE_URL=${BASE_URL} .')
                        }

            }
          }
        }
        stage("despliegue container docker") {
            steps{
                //docker compose up -d
                    script {
                    withCredentials([
                            string(credentialsId: 'BASE_URL', variable: 'BASE_URL')
                    ]) {
                        sh 'docker-compose up -d'
                    }
                }
            }
        }
    }

   post {
     always {
        // envie el emnail de confirmacion 
         emailext (
                subject: "Status del build: ${currentBuild.currentResult}",
                body: "Se ha completado el build. Puede detallar en: ${env.BUILD_URL}",
                to: "indira.hamdam@est.iudigital.edu.co",
                from: "jenkins@iudigital.edu.co"
            )
     }
   }
}